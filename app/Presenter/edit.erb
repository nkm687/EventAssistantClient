<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @presenter.name %></h1>
    <a href="<%= url_for :action => :show, :id => @presenter.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @presenter.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @presenter.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="presenter[name]" class="fieldLabel">Name</label>
            <input type="text" id="presenter[name]" name="presenter[name]" value="<%= @presenter.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="presenter[team]" class="fieldLabel">Team</label>
            <input type="text" id="presenter[team]" name="presenter[team]" value="<%= @presenter.team %>" <%= placeholder( "Team" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
