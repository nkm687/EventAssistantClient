<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @rating.username %></h1>
    <a href="<%= url_for :action => :show, :id => @rating.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @rating.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @rating.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="rating[username]" class="fieldLabel">Username</label>
            <input type="text" id="rating[username]" name="rating[username]" value="<%= @rating.username %>" <%= placeholder( "Username" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="rating[demoid]" class="fieldLabel">Demoid</label>
            <input type="text" id="rating[demoid]" name="rating[demoid]" value="<%= @rating.demoid %>" <%= placeholder( "Demoid" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="rating[rating]" class="fieldLabel">Rating</label>
            <input type="text" id="rating[rating]" name="rating[rating]" value="<%= @rating.rating %>" <%= placeholder( "Rating" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
